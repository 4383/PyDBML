Table posts {
    id integer [primary key]
    user_id integer [ref: > users.id] // many-to-one
}

Table reviews {
    id integer [primary key]
    user_id integer [ref: - users.id] // one-to-one
}

// or this
Table users {
    id integer [ref: < posts.user_id, ref: < reviews.user_id] // one to many
}

// The space after '<' is optional
